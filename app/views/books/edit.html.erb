<% if @book.errors.any? %>
  <%= @book.errors.count %>"error"
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div>
<%= flash[:notice] %>
</div>
<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<H4>Body</H4>
<%= f.text_area :body %>
<%= f.submit 'Update Books' %>
<% end %>

